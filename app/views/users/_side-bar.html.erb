<div class="side-bar">
  <div class="app-title">
    <h1><%= link_to "キャラファイル", root_path %></h1>
  </div>
  <div class="home">
    <%= link_to "ホーム", root_path %>
  </div>
  <div class="follow-user">
    <a href="#">フォロー</a>
  </div>
  <div class="follower-user">
    <a href="#">フォロワー</a>
  </div>
  <div class="user-column">
    <div class="user-image">
      <%= image_tag current_user.image.variant(resize: "70x70") if current_user.image.attached? %>
    </div>
    <div class="user-text">
      <h1 class="user-name"><%= current_user.nickname %></h1>
      <h1 class="user-email"><%= current_user.email %></h1>
    </div>
  </div>
  <div class="edit-user-btn">
    <%= link_to "アカウント情報編集", edit_user_path(current_user.id) %>
  </div>
  <div class="log-out">
    <%= link_to "ログアウト", destroy_user_session_path, method: "delete" %>
  </div>
</div>