<div class="wrapper">

  <%= render "side-bar"%>

  <div class="user-page">

    <%= form_with url: search_users_path, local: true, method: "get", class: "search-form" do |form| %>
      <%= form.text_field :keyword, placeholder: "アカウント名でユーザー検索", class: "search-text" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>

    <div class="result-window">
      <div class="result-title">
        <h1>検索結果</h1> 
      </div>
      <ul class="search-result">
        <% @users.each do |user| %>
          <li class="list">
            <%= link_to user_path(user.id) do %>
              <div class="search-user-image">
                <%= image_tag user.image.variant(resize: "150x150") if user.image.attached? %>
              </div>
              <div class="search-user-name">
                <p><%= user.nickname %></p>
              </div>
              <% if current_user != user %>
                <% if user.followed_by?(current_user) %>
                  <p class="follow-btn"><a href="#">フォロー済み</a></p>
                <% else %>
                  <p class="follow-btn"><a href="#">フォローする</a></p>
                <% end %>
              <% end%>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>

<%= render "layouts/footer" %>